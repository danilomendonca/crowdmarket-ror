<div class="container">
  <p id="notice"><%= notice %></p>
  <h1 class="display-4">New Product<%== " in #{@product.category&.name}" unless @product.category.nil? %></h1>
  <hr class="my-4">

  <div class="row mt-3">
    <div class="col">
      <%= render 'products/form', product: @product %>
    </div>
  </div>
  <hr class="my-4">

  <div class="row mt-3">
    <div class="col">
      <%= link_to 'List', products_path %>
    </div>
  </div>
</div>



