<div class="container">
  <p id="notice"><%= notice %></p>
  <h1>Supermarkets</h1>

  <% unless @supermarkets.empty? %>
  <div class="row">
      <div class="col font-weight-bold">Name</div>
      <div class="col"></div>
      <div class="col"></div>
      <div class="col"></div>
      <div class="w-100"></div>
  </div>
  <% @supermarkets.each do |supermarket| %>
    <div class="row">
      <div class="col"><%= supermarket.name %></div>
      <div class="col"><%= link_to 'Show', supermarket %></div>
      <div class="col"><%= link_to 'Edit', edit_supermarket_path(supermarket) %></div>
      <div class="col"><%= link_to 'Destroy', supermarket, method: :delete, data: { confirm: 'Are you sure?' } %></div>
      <div class="w-100"></div>
    </div>
  <% end %>
<% else %>
    <div class="row justify-content-start">
      <div class="col-6">No supermarket has been registered yet.</div>
    </div>
<% end %>
  <div class="row mt-3 justify-content-center">
    <div class="col">
      <%= link_to 'New Supermarket', new_supermarket_path %>
    </div>
  </div>
</div>
